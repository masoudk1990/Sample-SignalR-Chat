
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!doctype html>
<html>

<head>

    <!--Script references. -->

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</head>

<body>

    <div class="topBuffer"></div>

    @using (Html.BeginForm("Submit_Login", "User", FormMethod.Post))
    {
        <div class="container">

            <div class="row">

                <div class="text-center">
                    <h1>Login</h1>
                    <hr />
                </div>

                <div class="form-group col-md-4 col-md-offset-4">

                    <label>Username</label>
                    <div class="input-group">
                        @Html.TextBox("name", null, new { @class = "form-control", name = "name", id = "name", dir = "auto", placeholder = "Username" })
                        <span class="input-group-addon">&#9728;</span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg btn-block topBuffer">Login</button>

                </div>

            </div>
        </div>
        };

</body>
</html>